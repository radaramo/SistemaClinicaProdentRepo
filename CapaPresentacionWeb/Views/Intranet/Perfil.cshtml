@model CapaEntidades.entUsuario
@{
    ViewBag.Title = "Perfil";
    Layout = "~/Views/MasterPrincipal.cshtml";
}


<div class="row">
    <div class="col-md-4 col-lg-3">

        <section class="panel">
            <div class="panel-body">
                <div class="thumb-info mb-md">
                    <img src="/Estilos/Intranet/images/no-user.png" class="rounded img-responsive" alt="John Doe">
                    <div class="thumb-info-title">
                        <span class="thumb-info-inner">@Model.Persona.Nombres @Model.Persona.Apellidos</span>
                        <span class="thumb-info-type">@Model.TipoUsuario.Nombre</span>
                    </div>
                </div>

                <div class="widget-toggle-expand mb-md">
                    <div class="widget-header">
                        <h6>Profile Completion</h6>
                        <div class="widget-toggle">+</div>
                    </div>
                    <div class="widget-content-collapsed">
                        <div class="progress progress-xs light">
                            <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
                                60%
                            </div>
                        </div>
                    </div>
                    <div class="widget-content-expanded">
                        <ul class="simple-todo-list">
                            <li class="completed">Actualizar Perfil</li>
                            <li class="completed">Cambiar Informacion Personal</li>
                            <li>Redes Sociales</li>
                            <li>Seguidores</li>
                        </ul>
                    </div>
                </div>
                <hr class="dotted short">
                <div class="social-icons-list">
                    <a rel="tooltip" data-placement="bottom" target="_blank" href="http://www.facebook.com" data-original-title="Facebook"><i class="fa fa-facebook"></i><span>Facebook</span></a>
                    <a rel="tooltip" data-placement="bottom" href="http://www.twitter.com" data-original-title="Twitter"><i class="fa fa-twitter"></i><span>Twitter</span></a>
                    <a rel="tooltip" data-placement="bottom" href="http://www.linkedin.com" data-original-title="Linkedin"><i class="fa fa-linkedin"></i><span>Linkedin</span></a>
                </div>

            </div>
        </section>

    </div>
    <div class="col-md-8 col-lg-6">

        <div class="tabs">
            <ul class="nav nav-tabs tabs-primary">
                @*<li class="active">
                    <a href="#overview" data-toggle="tab">Overview</a>
                </li>*@
                <li class="active">
                    <a href="#edit" data-toggle="tab">Edit</a>
                </li>
            </ul>
            <div class="tab-content"> 
                <div id="edit" class="tab-pane active">
                    <form method="post" action="Perfil" enctype="multipart/form-data">
                        <h4 class="mb-xlg">Informacion Personal</h4>
                        <fieldset>
                            <div class="col-md-8" style="display:none">
                                <input type="text" class="form-control" name="txtidPersona" id="profileFirstName" value="@Model.Persona.idPersona">
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label" for="profileFirstName">Nombres</label>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" name="txtNombres" id="profileFirstName" value="@Model.Persona.Nombres">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label" for="profileLastName">Apellidos</label>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" name="txtApellidos" id="profileLastName" value="@Model.Persona.Apellidos">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label" for="profileAddress">Direccion</label>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" name="txtDireccion" id="profileAddress" value="@Model.Persona.Direccion">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label" for="profileCompany">Telefono</label>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" name="txtTelefono" id="profileCompany" value="@Model.Persona.Telefono">
                                </div>
                            </div>
                        </fieldset>
                        <hr class="dotted tall">
                        <h4 class="mb-xlg">Cambiar Credenciales</h4>
                        <fieldset class="mb-xl">
                            <div class="col-md-8" style="display:none">
                                <input type="text" class="form-control" name="txtidUsuario" id="profileNewPassword" value="@Model.idUsuario">
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label" for="profileNewPassword">Usuario</label>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" name="txtUserName" id="profileNewPassword" value="@Model.UserName">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label" for="profileNewPasswordRepeat">Contraseña</label>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" name="txtPassword" id="profileNewPasswordRepeat" value="@Model.Password">
                                </div>
                            </div>
                        </fieldset>
                        <div class="panel-footer">
                            <div class="row">
                                <div class="col-md-9 col-md-offset-3">
                                    <button type="submit" class="btn btn-primary">Guardar</button>
                                </div>
                            </div>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12 col-lg-3">

        <h4 class="mb-md">Paginas</h4>
        @if (@Model.TipoUsuario.Nombre == "Administrador") {
        <ul class="simple-card-list mb-xlg">
            <li class="primary">
                <h4>Pacientes</h4>
            </li>
            <li class="primary">
                <h4>Citas Medicas</h4>
            </li>
            <li class="primary">
                <h4>Historial Clinico</h4>
            </li>
        </ul>
        }
        else { 
           <ul class="simple-card-list mb-xlg">
            <li class="primary">
                <h4>Consultas Medicas</h4>
            </li>
            <li class="primary">
                <h4>Historial Clinico</h4>
            </li>
        </ul>
        }

        @*<h4 class="mb-md">Projects</h4>*@
        @*<ul class="simple-bullet-list mb-xlg">
            <li class="red">
                <span class="title">Porto Template</span>
                <span class="description truncate">Lorem ipsom dolor sit.</span>
            </li>
            <li class="green">
                <span class="title">Tucson HTML5 Template</span>
                <span class="description truncate">Lorem ipsom dolor sit amet</span>
            </li>
            <li class="blue">
                <span class="title">Porto HTML5 Template</span>
                <span class="description truncate">Lorem ipsom dolor sit.</span>
            </li>
            <li class="orange">
                <span class="title">Tucson Template</span>
                <span class="description truncate">Lorem ipsom dolor sit.</span>
            </li>
        </ul>*@
    </div>

</div>