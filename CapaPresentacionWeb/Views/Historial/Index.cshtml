@model IEnumerable<CapaEntidades.entPaciente>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/MasterPrincipal.cshtml";
}

<div class="col-lg-12">
    <section class="panel">
        <div id="message_row">
        </div>
        <header class="panel-heading">
            <h2 class="panel-title">Historial Clinico</h2>
        </header>
        <div class="panel-body">
            <table class="table table-bordered table-striped mb-none" id="datatable-default">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>
                            @Html.DisplayNameFor(model => model.Nombres)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Apellidos)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Dni)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    @{ int index = 0;
                     foreach (var item in Model)
                     {
                         index++;
                        <tr>
                            <td>@index</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombres)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Apellidos)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Dni)
                            </td>
                            <td>
                                <a href="@Url.Action("Historial", "Historial", new { id = item.idPaciente })" class="on-default edit-row" title="Historial"><i class="fa fa-list-alt"></i></a>
                            </td>
                        </tr>
                     }
                    }
                </tbody>
            </table>
        </div>
    </section>
</div>
    </div>
