<body>
    <section class="body">

        <!-- start: header -->
        <header class="header">
            <div class="logo-container">
                <a href="@Url.Action("Principal", "Intranet")" class="logo">
                    <img src="/Estilos/Extranet/img/demos/medical/Prodent.png" height="47" alt="Porto Admin" />
                </a>
                <div class="visible-xs toggle-sidebar-left" data-toggle-class="sidebar-left-opened" data-target="html" data-fire-event="sidebar-left-opened">
                    <i class="fa fa-bars" aria-label="Toggle sidebar"></i>
                </div>
            </div>

            <!-- start: search & user box -->
            <div class="header-right">
                <span class="separator"></span>
                <span class="separator"></span>
                @{
                    CapaEntidades.entUsuario u = new CapaEntidades.entUsuario();
                    if (Session["usuario"] != null)
                    {
                        u = (CapaEntidades.entUsuario)Session["usuario"];
                    }
                }
                <div id="userbox" class="userbox">
                    <a href="#" data-toggle="dropdown">
                        <figure class="profile-picture">
                            <img src="/Estilos/Intranet/images/loggedin_home_header1.png" alt="Joseph Doe" class="img-circle" data-lock-picture="/Estilos/Intranet/images/!logged-user.jpg" />
                        </figure>
                        <div class="profile-info" data-lock-name="John Doe" data-lock-email="johndoe@okler.com">
                            <span class="name">@u.Persona.Nombres @u.Persona.Apellidos</span>
                            <span class="role">@u.TipoUsuario.Nombre</span>
                        </div>

                        <i class="fa custom-caret"></i>
                    </a>

                    <div class="dropdown-menu">
                        <ul class="list-unstyled">
                            <li class="divider"></li>
                            <li>
                                <a role="menuitem" tabindex="-1" href="@Url.Action("Perfil", "Intranet", new { id = u.idUsuario })"><i class="fa fa-user"></i> Mi Perfil</a>
                            </li>
                            @*<li>
                                <a role="menuitem" tabindex="-1" href="#" data-lock-screen="true"><i class="fa fa-lock"></i>Pantalla Bloqueada</a>
                            </li>*@
                            <li>
                                <a role="menuitem" tabindex="-1" href="@Url.Action("CerrarSesion", "Intranet")"><i class="fa fa-power-off"></i>Cerrar Sesion</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- end: search & user box -->
        </header>
        <!-- end: header -->

        <div class="inner-wrapper">
            <!-- start: sidebar -->
            <aside id="sidebar-left" class="sidebar-left">

                <div class="sidebar-header">
                    <div class="sidebar-title">
                        Navegacion
                    </div>
                    <div class="sidebar-toggle hidden-xs" data-toggle-class="sidebar-left-collapsed" data-target="html" data-fire-event="sidebar-left-toggle">
                        <i class="fa fa-bars" aria-label="Toggle sidebar"></i>
                    </div>
                </div>

                <div class="nano">
                    <div class="nano-content">
                        <nav id="menu" class="nav-main" role="navigation">
                            <ul class="nav nav-main">
                                @if (u.TipoUsuario.Nombre == "Administrador") { 
                                <li class="nav-active">
                                    <a href="@Url.Action("Principal", "Intranet")">
                                        <i class="fa fa-home" aria-hidden="true"></i>
                                        <span>Inicio</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index", "Paciente")">
                                        @*<span class="pull-right label label-primary">182</span>*@
                                        <i class="fa fa-user" aria-hidden="true"></i>
                                        <span>Pacientes</span>
                                    </a>
                                </li>
                                @*<li class="nav-parent nav-expanded nav-active">*@
                                <li>
                                    <a href="@Url.Action("Index", "CitasMedicas")">
                                        <i class="fa fa-tasks" aria-hidden="true"></i>
                                        <span>Citas Medicas</span>
                                    </a>  
                                </li>
                                <li>
                                    <a href="@Url.Action("Index", "Historial")">
                                        <i class="fa fa-list-alt" aria-hidden="true"></i>
                                        <span>Historial Clinico</span>
                                    </a>
                                </li>
                                }
                                else { 
                                 <li class="nav-active">
                                    <a href="@Url.Action("Principal", "Intranet")">
                                        <i class="fa fa-home" aria-hidden="true"></i>
                                        <span>Inicio</span>
                                    </a>
                                </li>
                                 <li>
                                    <a href="@Url.Action("Index", "Consultas")">
                                        <i class="fa fa-tasks" aria-hidden="true"></i>
                                        <span>Consultas Medicas</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index", "Historial")">
                                        <i class="fa fa-list-alt" aria-hidden="true"></i>
                                        <span>Historial Clinico</span>
                                    </a>
                                </li>
                                }    
                            </ul>
                        </nav>

                        <hr class="separator" />
                        <hr class="separator" />
                    </div>

                </div>

            </aside>
            <!-- end: sidebar -->

            <section role="main" class="content-body">
                <header class="page-header">
                    <h2>Inicio</h2>

                    <div class="right-wrapper pull-right">
                        <ol class="breadcrumbs">
                            <li>
                                <a href="@Url.Action("Principal", "Intranet")">
                                    <i class="fa fa-home"></i>
                                </a>
                            </li>
                            <li><span>Paginas</span></li>
                            <li><span>Inicio</span></li>
                        </ol>

                        <a class="sidebar-right-toggle">@*<i class="fa fa-chevron-left"></i>*@</a>
                    </div>
                </header>

                <!-- start: page -->
                @RenderBody()      
                <!-- end: page -->
            </section>
        </div>

        <aside id="sidebar-right" class="sidebar-right">
            <div class="nano">
                <div class="nano-content">
                    <a href="#" class="mobile-close visible-xs">
                        Collapse <i class="fa fa-chevron-right"></i>
                    </a>

                    <div class="sidebar-right-wrapper">

                        <div class="sidebar-widget widget-calendar">
                            <h6>Upcoming Tasks</h6>
                            <div data-plugin-datepicker data-plugin-skin="dark"></div>

